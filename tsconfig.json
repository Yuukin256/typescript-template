{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src/",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6",
    "sourceMap": true,
    "noImplicitReturns": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext"]
  },
  "include": ["src/*.ts"]
}
